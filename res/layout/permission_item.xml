<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_gravity="start|center" android:layout_width="@dimen/permission_item_image_layout_size" android:layout_height="@dimen/permission_item_image_layout_size">
        <ImageView android:layout_gravity="center" android:id="@id/image_view" android:layout_width="@dimen/permission_item_image_size" android:layout_height="@dimen/permission_item_image_size" android:backgroundTint="@color/permission_item_description_text_color" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="@dimen/permission_item_name_width" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/permission_item_text_size" android:textColor="@color/permission_item_name_text_color" android:id="@id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/RobotoRegular" />
        <TextView android:textSize="@dimen/permission_item_description_text_size" android:textColor="@color/permission_item_name_description_text_color" android:id="@id/description" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/RobotoRegular" />
    </LinearLayout>
</LinearLayout>