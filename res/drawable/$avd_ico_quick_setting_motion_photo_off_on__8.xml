<?xml version="1.0" encoding="utf-8"?>
<set android:ordering="together" xmlns:aapt="http://schemas.android.com/aapt"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <set android:ordering="sequentially">
        <objectAnimator android:duration="100" android:valueFrom="0" android:valueTo="0" android:propertyName="fillAlpha" />
        <objectAnimator android:interpolator="@android:anim/linear_interpolator" android:duration="50" android:valueFrom="0" android:valueTo="1" android:propertyName="fillAlpha" />
        <objectAnimator android:duration="166" android:valueFrom="1" android:valueTo="1" android:propertyName="fillAlpha" />
    </set>
    <set android:ordering="sequentially">
        <objectAnimator android:duration="100" android:valueFrom="#ff000000" android:valueTo="#ff000000" android:propertyName="fillColor" />
        <objectAnimator android:interpolator="@android:anim/linear_interpolator" android:duration="200" android:valueFrom="#ff000000" android:valueTo="#ffffd90d" android:propertyName="fillColor" />
        <objectAnimator android:duration="16" android:valueFrom="#ffffd90d" android:valueTo="#ffffd90d" android:propertyName="fillColor" />
    </set>
</set>